{
  "manifest_version": 3,
  "name": "Bitcoin Drive",
  "short_name": "BitcoinDrive",
  "version": "1.0.0",
  "description": "Decentralized cloud storage powered by BSV blockchain with multi-provider support",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#00ff88",
  "icons": [
    {
      "src": "/bitcoin-drive-icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/bitcoin-drive-icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/bitcoin-drive-icon-128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "/bitcoin-drive-icon-48.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "/favicon.ico",
      "sizes": "32x32",
      "type": "image/x-icon"
    }
  ],
  "chrome_settings_overrides": {
    "homepage": "http://localhost:1030"
  },
  "chrome_url_overrides": {
    "newtab": "http://localhost:1030"
  },
  "theme": {
    "colors": {
      "frame": [0, 68, 0],
      "frame_inactive": [0, 51, 0],
      "frame_incognito": [0, 34, 0],
      "frame_incognito_inactive": [0, 26, 0],
      "bookmark_text": [0, 255, 136],
      "tab_background_text": [0, 204, 102],
      "tab_text": [0, 255, 136],
      "toolbar": [0, 26, 0],
      "toolbar_text": [0, 255, 136],
      "ntp_background": [0, 0, 0],
      "ntp_text": [0, 255, 136],
      "ntp_link": [0, 204, 102],
      "ntp_header": [0, 17, 0],
      "button_background": [0, 68, 0]
    },
    "tints": {
      "buttons": [0.33, 1, 0.5],
      "frame": [0.33, 0.9, 0.2],
      "frame_inactive": [0.33, 0.5, 0.2],
      "frame_incognito": [0.33, 0.3, 0.2],
      "frame_incognito_inactive": [0.33, 0.2, 0.15]
    },
    "properties": {
      "ntp_background_alignment": "center",
      "ntp_background_repeat": "no-repeat"
    }
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/bitcoin-drive-icon-16.png",
      "48": "/bitcoin-drive-icon-48.png",
      "128": "/bitcoin-drive-icon-128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:1030/*"
  ]
} 