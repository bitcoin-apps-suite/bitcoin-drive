{
  "name": "bitcoin-drive",
  "version": "1.0.0",
  "description": "Decentralized file storage platform on BSV blockchain with NFT tokenization",
  "private": true,
  "scripts": {
    "dev": "next dev -p 2030",
    "build": "next build",
    "start": "next start -p 2030",
    "lint": "eslint",
    "kill:3000": "lsof -ti:3000 | xargs kill -9",
    "kill:dev": "lsof -ti:3000 | xargs kill -9 && lsof -ti:3001 | xargs kill -9",
    "kill:all": "for port in {3000..3010}; do lsof -ti:$port | xargs kill -9 2>/dev/null || true; done"
  },
  "keywords": [
    "bitcoin",
    "bsv",
    "blockchain",
    "storage",
    "nft",
    "decentralized",
    "handcash",
    "baps"
  ],
  "author": "The Bitcoin Corporation LTD",
  "license": "Open BSV License Version 5",
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@bsv/sdk": "^1.7.6",
    "@handcash/handcash-connect": "^0.8.11",
    "@handcash/handcash-sdk": "^0.0.4",
    "@stripe/stripe-js": "^7.9.0",
    "autoprefixer": "^10.4.21",
    "bsv": "^2.0.10",
    "googleapis": "^159.0.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-auth": "^4.24.11",
    "postcss": "^8.5.6",
    "prisma": "^6.16.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "stripe": "^18.5.0",
    "tailwindcss": "^3.4.18"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "nodemon": "^3.1.10",
    "typescript": "^5"
  }
}
